@model WeatherForecastProj.Models.WeatherViewModel

<h2 style="margin-bottom:20px;">ðŸŒ¦ Weather Forecast (2 Hours Forecast)</h2>

<form method="get">
    <label for="selectedArea"><strong>Select Area:</strong></label>
    <select id="selectedArea" name="selectedArea" onchange="this.form.submit()" class="form-select" style="width:250px; display:inline-block; margin-left:10px;">
        <option value="">-- Select an area --</option>
        @foreach (var area in Model.Areas)
        {
            <option value="@area" @(area == Model.SelectedArea ? "selected" : "")>@area</option>
        }
    </select>
</form>

@if (!string.IsNullOrEmpty(Model.SelectedForecast))
{
    <div style="margin-top:30px; padding:20px; border-radius:8px; background:#f8f9fa; box-shadow:0 2px 6px rgba(0,0,0,0.1); max-width:400px;">
        <h4>@Model.SelectedArea</h4>
        <p style="font-size:1.2em; color:#333;">
            Forecast: <strong>@Model.SelectedForecast</strong>
        </p>
        <p style="font-size:0.9em; color:#666;">
            Last updated: @Model.LastUpdated
        </p>
    </div>
}
else
{
    <p style="margin-top:20px; color:#666;">Please select an area to view its forecast.</p>
}
