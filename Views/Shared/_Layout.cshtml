@*
    Shared layout for WeatherForecastProj
    All pages render inside @RenderBody()
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"]) - Weather Forecast App</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: #f8f9fa;
        }
        .navbar-brand img {
            height: 70px; /* Bigger logo */
            margin-right: 15px;
        }
        .navbar-brand span {
            font-size: 2rem; /* Bigger text */
            font-weight: 700;
            letter-spacing: 1px;
        }
        footer {
            margin-top: 40px;
            padding: 1rem;
            background: #f1f1f1;
            text-align: center;
            font-size: 0.9rem;
            color: #555;
        }
    </style>
</head>
<body>
    <!-- Navbar with larger logo + text -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/onest-logo.png" alt="OneST Logo" />
                <span>Singapore Weather Forecast</span>
            </a>
        </div>
    </nav>

    <!-- Main content -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        Weather data from <a href="https://data.gov.sg/" target="_blank">data.gov.sg</a> â€¢ @DateTime.Now.Year
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
